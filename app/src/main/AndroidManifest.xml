    <uses-permission android:name="android.permission.CAMERA"></uses-permission> //Camera Permissions
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> // foreground location - Fine location (AGPS)
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> //foreground location GPS
